{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/matrix/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "LLVMDSDL_ENABLE_SELF_CONTAINED_TOOL_BUNDLE": "ON"
      }
    },
    {
      "name": "dev-llvm-env",
      "displayName": "Development (LLVM_DIR/MLIR_DIR from environment)",
      "description": "Multi-config build using LLVM_DIR and MLIR_DIR from environment variables.",
      "inherits": "base",
      "cacheVariables": {
        "LLVM_DIR": "$env{LLVM_DIR}",
        "MLIR_DIR": "$env{MLIR_DIR}"
      }
    },
    {
      "name": "dev-homebrew",
      "displayName": "Development (macOS Homebrew LLVM)",
      "description": "Multi-config build with LLVM/MLIR from /opt/homebrew/opt/llvm.",
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "LLVM_DIR": "/opt/homebrew/opt/llvm/lib/cmake/llvm",
        "MLIR_DIR": "/opt/homebrew/opt/llvm/lib/cmake/mlir",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "26.0"
      }
    },
    {
      "name": "ci",
      "displayName": "CI",
      "description": "Multi-config CI preset with automatic LLVM/MLIR discovery from environment/system paths.",
      "inherits": "base",
      "cacheVariables": {
        "LLVMDSDL_ENABLE_PYTHON_ACCELERATOR": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-dev-llvm-env-debug",
      "displayName": "Build (dev-llvm-env, Debug)",
      "configurePreset": "dev-llvm-env",
      "configuration": "Debug"
    },
    {
      "name": "build-dev-llvm-env-relwithdebinfo",
      "displayName": "Build (dev-llvm-env, RelWithDebInfo)",
      "configurePreset": "dev-llvm-env",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "build-dev-llvm-env-release",
      "displayName": "Build (dev-llvm-env, Release + bundle)",
      "configurePreset": "dev-llvm-env",
      "configuration": "Release",
      "targets": [
        "all",
        "bundle-tools-self-contained"
      ]
    },
    {
      "name": "build-dev-homebrew-debug",
      "displayName": "Build (dev-homebrew, Debug)",
      "configurePreset": "dev-homebrew",
      "configuration": "Debug"
    },
    {
      "name": "build-dev-homebrew-relwithdebinfo",
      "displayName": "Build (dev-homebrew, RelWithDebInfo)",
      "configurePreset": "dev-homebrew",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "build-dev-homebrew-release",
      "displayName": "Build (dev-homebrew, Release + bundle)",
      "configurePreset": "dev-homebrew",
      "configuration": "Release",
      "targets": [
        "all",
        "bundle-tools-self-contained"
      ]
    },
    {
      "name": "build-ci-debug",
      "displayName": "Build (ci, Debug)",
      "configurePreset": "ci",
      "configuration": "Debug"
    },
    {
      "name": "build-ci-relwithdebinfo",
      "displayName": "Build (ci, RelWithDebInfo)",
      "configurePreset": "ci",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "build-ci-release",
      "displayName": "Build (ci, Release + bundle)",
      "configurePreset": "ci",
      "configuration": "Release",
      "targets": [
        "all",
        "bundle-tools-self-contained"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "execution": {
        "noTestsAction": "error"
      },
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-dev-llvm-env-smoke-debug",
      "displayName": "Test (dev-llvm-env smoke, Debug)",
      "inherits": "test-base",
      "configurePreset": "dev-llvm-env",
      "configuration": "Debug",
      "filter": {
        "exclude": {
          "label": "integration"
        }
      }
    },
    {
      "name": "test-dev-llvm-env-smoke-relwithdebinfo",
      "displayName": "Test (dev-llvm-env smoke, RelWithDebInfo)",
      "inherits": "test-base",
      "configurePreset": "dev-llvm-env",
      "configuration": "RelWithDebInfo",
      "filter": {
        "exclude": {
          "label": "integration"
        }
      }
    },
    {
      "name": "test-dev-llvm-env-smoke-release",
      "displayName": "Test (dev-llvm-env smoke, Release)",
      "inherits": "test-base",
      "configurePreset": "dev-llvm-env",
      "configuration": "Release",
      "filter": {
        "exclude": {
          "label": "integration"
        }
      }
    },
    {
      "name": "test-dev-homebrew-smoke-debug",
      "displayName": "Test (dev-homebrew smoke, Debug)",
      "inherits": "test-base",
      "configurePreset": "dev-homebrew",
      "configuration": "Debug",
      "filter": {
        "exclude": {
          "label": "integration"
        }
      }
    },
    {
      "name": "test-dev-homebrew-smoke-relwithdebinfo",
      "displayName": "Test (dev-homebrew smoke, RelWithDebInfo)",
      "inherits": "test-base",
      "configurePreset": "dev-homebrew",
      "configuration": "RelWithDebInfo",
      "filter": {
        "exclude": {
          "label": "integration"
        }
      }
    },
    {
      "name": "test-dev-homebrew-smoke-release",
      "displayName": "Test (dev-homebrew smoke, Release)",
      "inherits": "test-base",
      "configurePreset": "dev-homebrew",
      "configuration": "Release",
      "filter": {
        "exclude": {
          "label": "integration"
        }
      }
    },
    {
      "name": "test-ci-smoke-debug",
      "displayName": "Test (ci smoke, Debug)",
      "inherits": "test-base",
      "configurePreset": "ci",
      "configuration": "Debug",
      "filter": {
        "exclude": {
          "label": "integration"
        }
      }
    },
    {
      "name": "test-ci-smoke-relwithdebinfo",
      "displayName": "Test (ci smoke, RelWithDebInfo)",
      "inherits": "test-base",
      "configurePreset": "ci",
      "configuration": "RelWithDebInfo",
      "filter": {
        "exclude": {
          "label": "integration"
        }
      }
    },
    {
      "name": "test-ci-smoke-release",
      "displayName": "Test (ci smoke, Release)",
      "inherits": "test-base",
      "configurePreset": "ci",
      "configuration": "Release",
      "filter": {
        "exclude": {
          "label": "integration"
        }
      }
    },
    {
      "name": "test-dev-llvm-env-full-relwithdebinfo",
      "displayName": "Test (dev-llvm-env full, RelWithDebInfo)",
      "inherits": "test-base",
      "configurePreset": "dev-llvm-env",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "test-dev-homebrew-full-relwithdebinfo",
      "displayName": "Test (dev-homebrew full, RelWithDebInfo)",
      "inherits": "test-base",
      "configurePreset": "dev-homebrew",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "test-ci-full-relwithdebinfo",
      "displayName": "Test (ci full, RelWithDebInfo)",
      "inherits": "test-base",
      "configurePreset": "ci",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "test-ci-python-accel-required-relwithdebinfo",
      "displayName": "Test (ci Python accelerator required gate, RelWithDebInfo)",
      "inherits": "test-base",
      "configurePreset": "ci",
      "configuration": "RelWithDebInfo",
      "filter": {
        "include": {
          "label": "python-accel-required"
        }
      }
    }
  ],
  "workflowPresets": [
    {
      "name": "matrix-dev-llvm-env",
      "displayName": "Workflow (matrix dev-llvm-env)",
      "description": "Configure once, then run Debug smoke, RelWithDebInfo full, and Release smoke+bundle.",
      "steps": [
        {
          "type": "configure",
          "name": "dev-llvm-env"
        },
        {
          "type": "build",
          "name": "build-dev-llvm-env-debug"
        },
        {
          "type": "test",
          "name": "test-dev-llvm-env-smoke-debug"
        },
        {
          "type": "build",
          "name": "build-dev-llvm-env-relwithdebinfo"
        },
        {
          "type": "test",
          "name": "test-dev-llvm-env-full-relwithdebinfo"
        },
        {
          "type": "build",
          "name": "build-dev-llvm-env-release"
        },
        {
          "type": "test",
          "name": "test-dev-llvm-env-smoke-release"
        }
      ]
    },
    {
      "name": "matrix-dev-homebrew",
      "displayName": "Workflow (matrix dev-homebrew)",
      "description": "Configure once, then run Debug smoke, RelWithDebInfo full, and Release smoke+bundle.",
      "steps": [
        {
          "type": "configure",
          "name": "dev-homebrew"
        },
        {
          "type": "build",
          "name": "build-dev-homebrew-debug"
        },
        {
          "type": "test",
          "name": "test-dev-homebrew-smoke-debug"
        },
        {
          "type": "build",
          "name": "build-dev-homebrew-relwithdebinfo"
        },
        {
          "type": "test",
          "name": "test-dev-homebrew-full-relwithdebinfo"
        },
        {
          "type": "build",
          "name": "build-dev-homebrew-release"
        },
        {
          "type": "test",
          "name": "test-dev-homebrew-smoke-release"
        }
      ]
    },
    {
      "name": "matrix-ci",
      "displayName": "Workflow (matrix ci)",
      "description": "Configure once, then run Debug smoke, RelWithDebInfo Python-accelerator required gate + full suite, and Release smoke+bundle.",
      "steps": [
        {
          "type": "configure",
          "name": "ci"
        },
        {
          "type": "build",
          "name": "build-ci-debug"
        },
        {
          "type": "test",
          "name": "test-ci-smoke-debug"
        },
        {
          "type": "build",
          "name": "build-ci-relwithdebinfo"
        },
        {
          "type": "test",
          "name": "test-ci-python-accel-required-relwithdebinfo"
        },
        {
          "type": "test",
          "name": "test-ci-full-relwithdebinfo"
        },
        {
          "type": "build",
          "name": "build-ci-release"
        },
        {
          "type": "test",
          "name": "test-ci-smoke-release"
        }
      ]
    }
  ]
}
