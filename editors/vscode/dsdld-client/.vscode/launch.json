{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}/test/workspace"
      ],
      "outFiles": [],
      "env": {
        "DSDLD_BINARY": "${env:DSDLD_BINARY}"
      }
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/test/suite",
        "--disable-extensions",
        "${workspaceFolder}/test/workspace"
      ],
      "outFiles": [],
      "env": {
        "DSDLD_BINARY": "${env:DSDLD_BINARY}"
      }
    }
  ]
}
