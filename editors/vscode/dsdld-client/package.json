{
  "name": "dsdld-client",
  "displayName": "DSDL Language Support",
  "description": "VSCode client for the llvm-dsdl language server (dsdld).",
  "version": "0.1.0",
  "publisher": "opencyphal",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:dsdl",
    "onCommand:dsdld.restartLanguageServer",
    "onCommand:dsdld.shutdownLanguageServer"
  ],
  "main": "./src/extension.js",
  "scripts": {
    "test": "node ./test/runTest.js"
  },
  "contributes": {
    "languages": [
      {
        "id": "dsdl",
        "aliases": [
          "DSDL",
          "OpenCyphal DSDL"
        ],
        "extensions": [
          ".dsdl"
        ],
        "icon": {
          "light": "../../../dsdl.svg",
          "dark": "../../../dsdl.svg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "dsdld.restartLanguageServer",
        "category": "DSDLD",
        "title": "Restart Language Server"
      },
      {
        "command": "dsdld.shutdownLanguageServer",
        "category": "DSDLD",
        "title": "Shutdown Language Server"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "DSDLD",
      "properties": {
        "dsdld.serverPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the dsdld executable. If empty, the extension uses DSDLD_BINARY or PATH."
        },
        "dsdld.rootNamespaceDirs": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Root namespace directories forwarded to dsdld runtime configuration."
        },
        "dsdld.lookupDirs": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Additional lookup directories forwarded to dsdld runtime configuration."
        },
        "dsdld.lintEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable linting in dsdld."
        },
        "dsdld.aiEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Legacy AI toggle. When enabled and aiMode is unset, dsdld defaults to suggest mode."
        },
        "dsdld.aiMode": {
          "type": "string",
          "default": "off",
          "enum": [
            "off",
            "suggest",
            "assist",
            "apply_with_confirmation"
          ],
          "description": "AI operating mode: suggestions only, assistive planning, or confirmation-gated edit application."
        },
        "dsdld.trace": {
          "type": "string",
          "default": "basic",
          "enum": [
            "off",
            "basic",
            "verbose"
          ],
          "description": "Trace verbosity forwarded to dsdld."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@vscode/test-electron": "^2.4.1",
    "mocha": "^10.7.3"
  }
}
